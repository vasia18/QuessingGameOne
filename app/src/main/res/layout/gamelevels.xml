                        <TextView
                            android:id="@+id/textView16"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_sixteen" />


                        <TextView
                            android:id="@+id/textView17"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_seventeen" />

                        <TextView
                            android:id="@+id/textView18"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_eighteen" />

                        <TextView
                            android:id="@+id/textView19"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_nineteen" />

                        <TextView
                            android:id="@+id/textView20"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_twenty" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView21"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_twentyOne" />


                        <TextView
                            android:id="@+id/textView22"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_twentyTwo" />

                        <TextView
                            android:id="@+id/textView23"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_twentyFree" />

                        <TextView
                            android:id="@+id/textView24"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
