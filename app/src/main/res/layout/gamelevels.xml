                        <TextView
                            android:id="@+id/textView29"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_twentyNine" />

                        <TextView
                            android:id="@+id/textView30"
                            style="@style/StyleButton_2"
                            android:layout_marginEnd="@dimen/layout_marginRight_15dp"
                            android:text="@string/btn_thirty" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>