<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonFon">@color/colorButtonFon</item>
        <item name="colorButtonStroke">@color/colorButtonStroke</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Растинуть окно на весь экран.
<item name="android:windowFullscreen">true/</item>
<item name="android:windowContentOverlay">@null/</item>

//Информация которая будет перекрывать окно со значением ноль(ничто перекрывать окно не будет).
<item name="android:windowNoTitle">true/item //Нез заголовка у окна (значение true).  -->

    <style name="StyleButton" parent="AppTheme">
        <item name="android:"
        <item name="android:background">@drawable/style_btn_press_on</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>