<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Убрать строку состояния на телефоне
<item name="android:windowNoTitle">true</item>
<item name="android:windowFullscreen">true</item>

// Растинуть окно на весь экран.
<item name="android:windowFullscreen">true/</item>
<item name="android:windowContentOverlay">@null/</item>

//Информация которая будет перекрывать окно со значением ноль(ничто перекрывать окно не будет).
<item name="android:windowNoTitle">true/item //Нез заголовка у окна (значение true).  -->

    <style name="StyleButton" parent="AppTheme">
        <item name="android:background">@drawable/style_btn_press_on</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:paddingRight">@dimen/paddingRight</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

</resources>